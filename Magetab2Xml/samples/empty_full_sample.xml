<xml version="1.0" encoding="UTF-8">

  <!-- CONVENTIONS:
       ============================================================================
       All lists are semi-colon separated, no spaces.  
       Name-Version pairs should be delimitated with pipes (|), e.g., Name|Version 
       The following should be valid ontology terms present in SRes.OntologyTerm.  User-defined terms should be avoided, if possible:
           role (of a contact)
           types or subtypes of:
             study_design
	     study_factor
	     protocol
	     protocol_app_node
  -->

  <!-- The IDF may contain more than 1 of the following: 
       ============================================================================
       study_design
       study_factor
       contact
       protocol
       
       Each block should be repeated as needed
  -->

  <!-- If no value is available for a sub-element (tag)
       ============================================================================
       leave blank, e.g., <pubmed_id></pubmed_id>
       or remove from xml
  -->
  <mage-tab>
    <idf>
      <study>
        <name></name>
	<description></description>
	<pubmed_ids>may be semi-colon separated list or a single id</pubmed_ids>
	<external_database_release>Name|Version</external_database_release>
	<source_id></source_id>
	<goal></goal>
	<approaches></approaches>
	<results></results>
	<conclusions></conclusions>
	<related_studies>semi-colon separated list of study names; part of FGSS--application specific</related_studies>
	<child_studies>semi-colon separated list of study names; for investigations</child_studies>
      </study>
    
      <study_design>
        <type></type>
	<type_ext_db_rls>Name|Version</type_ext_db_rls>
      </study_design>	
    
      <study_factor>
        <name></name>
	<description></description>
	<type></type>
	<type_ext_db_rls>Name|Version</type_ext_db_rls>
      </study_factor>	
    
      <contact>
        <name></name>
	<first_name></first_name>
	<last_name></last_name>
	<email></email>
	<phone></phone>
	<fax></fax>
	<address1></address1>
	<address2></address2>
	<city></city>
	<state></state>
	<country></country>
	<zip_code></zip_code>
	<affiliation></affiliation>
	<roles>semi-colon separated list of roles</roles>
	<roles_ext_db_rls>semi-colon separated list of Name|Version</roles_ext_db_rls>
      </contact>

      <protocol>
        <name></name>
	<description></description>
	<type></type>
	<type_ext_db_rls>Name|Version</type_ext_db_rls>
	<pubmed_id></pubmed_id>
	<external_database_release>Name|Version</external_database_release>
	<source_id></source_id>
	<uri></uri>
	<contact>Name of contact</contact>
	<other_read></other_read>
	<protocol_parameters>
	  <param>
	    <name></name>
	    <data_type></data_type>
	    <data_type_ext_db_rls>Name|Version</data_type_ext_db_rls>
	    <unit_type></unit_type>
	    <unit_type_ext_db_rls>Name|Version</unit_type_ext_db_rls>
	    <default_value></default_value>
	    <is_user_specified></is_user_specified>
	  </param>
	<!-- a protocol may have multiple parameters; repeat above block as necessary	-->		 
        </protocol_parameters>
        <child_protocols>semi-colon separated list of 2 or more unique protocol names; order the same as in protocol series</child_protocols>    
      </protocol>

    </idf>

    <sdrf>
      <protocol_app_node id="1">
        <factor_values>Name|Value(|Schema::Table|Row_Id);Name|Value(|Schema::Table|Row_Id)</factor_values>
	<type></type>
	<subtype></subtype>
	<name></name>
	<description></description>
	<external_database_release>Name|Version</external_database_release>
	<source_id></source_id>	
	<uri></uri>
	<taxon></taxon>
<!-- A characteristic cen either have ext_db_rls and ontology_term or table, NOT BOTH -->
	<node_characteristics>
	  <characteristic>
	    <external_database_release>Name|Version</external_database_release>
	    <ontology_term category=""></ontology_term>	
	  </characteristic>
	  <characteristic>
	    <table>Schema::Table</table>
	  </characteristic>	
	</node_characteristics>
      </protocol_app_node>
 
      <protocol_app_node id="2">
        <factor_values>Name|Value(|Schema::Table|Row_Id);Name|Value(|Schema::Table|Row_Id)</factor_values>
	<type></type>
	<subtype></subtype>
	<name></name>
	<description></description>
	<external_database_release>Name|Version</external_database_release>
	<source_id></source_id>	
	<uri></uri>
	<taxon></taxon>
	<node_characteristics>
	  <characteristic>
	    <external_database_release>Name|Version</external_database_release>
	    <ontology_term category=""></ontology_term>	
	  </characteristic>
	  <characteristic>
	    <table>Schema::Table</table>
	  </characteristic>	
	</node_characteristics>
      </protocol_app_node>
 
       <protocol_app_node id="3">
        <factor_values>Name|Value(|Schema::Table|Row_Id);Name|Value(|Schema::Table|Row_Id)</factor_values>
	<type></type>
	<subtype></subtype>
	<name></name>
	<description></description>
	<external_database_release>Name|Version</external_database_release>
	<source_id></source_id>	
	<uri></uri>
	<taxon></taxon>
	<node_characteristics>
	  <characteristic>
	    <external_database_release>Name|Version</external_database_release>
	    <ontology_term category=""></ontology_term>	
	  </characteristic>
	  <characteristic>
	    <table>Schema::Table</table>
	  </characteristic>	
	</node_characteristics>
      </protocol_app_node>
   
      <protocol_app>
	<protocol></protocol>
	<protocol_app_date></protocol_app_date>
	<contacts>semi-colon separated list of 'Contact::Role::ExtDb Name|ExtDb Version';order is same as in series in protocol is a series</contacts>
	<protocol_app_parameters>param1_name|param1_value(|param1_table|param1_row_id);param2_name|param2_value(|param2_table|param2_row_id), i.e., a semi-colon separated list of param name|value pairs with |table|row_id being optional for certain parameter types, e.g., for an array: array_design_ref|A-AFFY-45|RAD::ArrayDesign|555. Note that a table must be specified as Schema::Table. If protocol series use ! to separate parameters from different childrens</protocol_app_parameters>
	<inputs>semi-colon separated list of protocol_node ids</inputs>
	<outputs>semi-colon separated list of protocol_node ids</outputs>
      </protocol_app>

    </sdrf>

  </mage-tab>

</xml>
