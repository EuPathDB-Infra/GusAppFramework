<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.gusdb.schemabrowser.model.Schema"
    >

        <id
            name="id"
            column="id"
            type="long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Schema.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <many-to-one
            name="documentation"
            class="org.gusdb.schemabrowser.model.Documentation"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="documentation"
        />

        <set
            name="tables"
            table="table"
            lazy="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="schema_id"
            >
            </key>

            <one-to-many
                  class="org.gusdb.schemabrowser.model.Table"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Schema.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
