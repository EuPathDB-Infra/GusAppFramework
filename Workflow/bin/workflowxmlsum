#!/usr/bin/perl

use lib "$ENV{GUS_HOME}/lib/perl";

use strict;
use GUS::Workflow::WorkflowHandle;
use GUS::Workflow::WorkflowStepPilot;

&usage unless (scalar(@ARGV) == 2 && shift(@ARGV) eq '-h');

my $homeDir = $ARGV[0];
my $workflow = GUS::Workflow::WorkflowHandle->new($homeDir);

print $workflow->getXmlFileDigest() . "\n";

sub usage {
    print "

Print a checksum digest of the xml files used by a workflow.

Usage: workflowxmlsum -h workflow_home_dir

";
    exit(1);
}




